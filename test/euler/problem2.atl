include "std.atl"

fib (i64 num) -> i64 {
    if num == 0 {
        -> 0
    } else if num == 1 {
        -> 1
    } else {
        -> fib(num - 1) + fib(num - 2)
    }
}

main() -> i64 {

    i64 :: sum = 0
    for i64::i = 0; sum < 4000000; i = i + 1 {
        i64 :: res = fib(i)
	if res % 2 == 0 {
            sum = sum + res
	}
    }
    putint(sum)
    -> 0
}
